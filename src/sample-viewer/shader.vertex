#version 330

layout(location = 0) in vec3 vertexPosition_ms;
layout(location = 1) in vec3 vertexNormal_ms;
layout(location = 2) in vec3 vertexColor;

out vec3 fragmentColor;
out float lightIntensity;

uniform mat4 M;
uniform mat4 V;
uniform mat4 P;
uniform mat4 MVP;

void main() {
	gl_Position =  MVP * vec4(vertexPosition_ms,1);

	fragmentColor = vertexColor;

	vec3 lightDirection_ms = vec3(0,0,1);
	//lightIntensity = clamp(dot(vertexNormal_ms,lightDirection_ms),0,1);
	lightIntensity = 1;
}

